{
    "name"  : "Text Tube" ,
    "version" : "1.0" , 
    "description" : "A simple chrome extension to save & copy the content from one place",
    "manifest_version"  : 2 , 
    "browser_action"  :{
        "default_popup" : "index.html"
    } ,
    "background" : {
        "scripts" : [
            "eventPage.js" , 
            "runtime.js"
        ],
        "persistent" : false
    },
    "permissions":[
        "storage" , 
        "notifications",
        "contextMenus"
    ] , "icons": {
        "64": "assets/ic.png"
      }  , 
      "web_accessible_resources": [
        "assets/icon.png"
      ]
    
}